@model WebApp_ExcelFileProcessor.Models.Student

@{
    ViewData["Title"] = "Add Student";
}

<!--Header-->
<div class="form-row custom-row-responsiveness">
    <div class="col-12 custom-col-responsiveness mb-2">
        <h1 class="custom-dark-blue">Add Student</h1>
        <hr class="custom-blue-hr" />
    </div>
</div>

<!--Tab Header-->
<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#student-nav" role="tab">Student Information</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#module-nav" role="tab">Module Information</a>
    </li>
</ul>

<form asp-action="AddStudent" asp-controller="BaseClass" method="post" id="formAddStudent">
    <div class="tab-content mt-1">
        <div role="tabpanel" class="tab-pane active" id="student-nav">

            <!--Content-->
            <div class="form-row custom-row-responsiveness">

                <input type="hidden" asp-for="StudentId" value="@Model.StudentId" />
                <input type="hidden" asp-for="DateCreated" value="@Model.DateCreated" />
                <input type="hidden" asp-for="IsDeleted" value="@Model.IsDeleted" />

                <div class="col-xl-6 col-md-12 custom-col-responsiveness mb-2">
                    <div class="form-group">
                        <label asp-for="StudentNr" class="control-label"></label>
                        <input asp-for="StudentNr" class="form-control" required />
                        <span asp-validation-for="StudentNr" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="QRCode" class="control-label"></label>
                        <input asp-for="QRCode" class="form-control" required />
                        <span asp-validation-for="QRCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-xl-6 col-md-12 custom-col-responsiveness mb-2">
                    <div class="form-group">
                        <label asp-for="Gender.GenderName" class="control-label"></label>
                        <select asp-for="GenderId" class="form-control" asp-items="Model.GenderList" required>
                            <option value="" disabled selected hidden>Select Gender</option>
                        </select>
                        <span asp-validation-for="Gender.GenderName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudentClass.DisplayName" class="control-label"></label>
                        <select asp-for="StudentClassId" class="form-control" asp-items="Model.ClassList" required>
                            <option value="" disabled selected hidden>Select Class</option>
                        </select>
                        <span asp-validation-for="StudentClass.DisplayName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudentGroup.DisplayName" class="control-label"></label>
                        <select asp-for="StudentGroupId" class="form-control" asp-items="Model.GroupList" required>
                            <option value="" disabled selected hidden>Select Group</option>
                        </select>
                        <span asp-validation-for="StudentGroup.DisplayName" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="module-nav">
            <!--Module Information Tab-->
            <div class="form-row custom-row-responsiveness">

                <!--Weekdays-->
                <div class="col-xl-3 col-md-12 custom-col-responsiveness mb-2">
                    <div class="form-group">
                        <label asp-for="MondayModuleCodeId" class="control-label"></label>
                        <select asp-for="MondayModuleCodeId" class="form-control" asp-items="Model.ModuleList" required>
                            <option value="" disabled selected hidden>Select Module</option>
                        </select>
                        <span asp-validation-for="MondayModuleCodeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TuesdayModuleCodeId" class="control-label"></label>
                        <select asp-for="TuesdayModuleCodeId" class="form-control" asp-items="Model.ModuleList" required>
                            <option value="" disabled selected hidden>Select Module</option>
                        </select>
                        <span asp-validation-for="TuesdayModuleCodeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WednesdayModuleCodeId" class="control-label"></label>
                        <select asp-for="WednesdayModuleCodeId" class="form-control" asp-items="Model.ModuleList" required>
                            <option value="" disabled selected hidden>Select Module</option>
                        </select>
                        <span asp-validation-for="WednesdayModuleCodeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ThursdayModuleCodeId" class="control-label"></label>
                        <select asp-for="ThursdayModuleCodeId" class="form-control" asp-items="Model.ModuleList" required>
                            <option value="" disabled selected hidden>Select Module</option>
                        </select>
                        <span asp-validation-for="ThursdayModuleCodeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FridayModuleCodeId" class="control-label"></label>
                        <select asp-for="FridayModuleCodeId" class="form-control" asp-items="Model.ModuleList" required>
                            <option value="" disabled selected hidden>Select Module</option>
                        </select>
                        <span asp-validation-for="FridayModuleCodeId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-xl-3 col-md-12 custom-col-responsiveness mb-2">
                    <div class="form-group">
                        <label asp-for="MondaySubjString" class="control-label"></label>
                        <input asp-for="MondaySubjString" class="form-control" />
                        <span asp-validation-for="MondaySubjString" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TuesdaySubjString" class="control-label"></label>
                        <input asp-for="TuesdaySubjString" class="form-control" />
                        <span asp-validation-for="TuesdaySubjString" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WednesdaySubjString" class="control-label"></label>
                        <input asp-for="WednesdaySubjString" class="form-control" />
                        <span asp-validation-for="WednesdaySubjString" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ThursdaySubjString" class="control-label"></label>
                        <input asp-for="ThursdaySubjString" class="form-control" />
                        <span asp-validation-for="ThursdaySubjString" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FridaySubjString" class="control-label"></label>
                        <input asp-for="FridaySubjString" class="form-control" />
                        <span asp-validation-for="FridaySubjString" class="text-danger"></span>
                    </div>
                </div>

                <!--Extra-->
                <div class="col-xl-3 col-md-12 custom-col-responsiveness mb-2">
                    <div class="form-group">
                        <label asp-for="Extra1ModuleCodeId" class="control-label"></label>
                        <select asp-for="Extra1ModuleCodeId" class="form-control" asp-items="Model.ModuleList" required>
                            <option value="" disabled selected hidden>Select Module</option>
                        </select>
                        <span asp-validation-for="Extra1ModuleCodeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Extra2ModuleCodeId" class="control-label"></label>
                        <select asp-for="Extra2ModuleCodeId" class="form-control" asp-items="Model.ModuleList" required>
                            <option value="" disabled selected hidden>Select Module</option>
                        </select>
                        <span asp-validation-for="Extra2ModuleCodeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Extra3ModuleCodeId" class="control-label"></label>
                        <select asp-for="Extra3ModuleCodeId" class="form-control" asp-items="Model.ModuleList" required>
                            <option value="" disabled selected hidden>Select Module</option>
                        </select>
                        <span asp-validation-for="Extra3ModuleCodeId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-xl-3 col-md-12 custom-col-responsiveness mb-2">
                    <div class="form-group">
                        <label asp-for="Extra1SubjString" class="control-label"></label>
                        <input asp-for="Extra1SubjString" class="form-control" />
                        <span asp-validation-for="Extra1SubjString" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Extra2SubjString" class="control-label"></label>
                        <input asp-for="Extra2SubjString" class="form-control" />
                        <span asp-validation-for="Extra2SubjString" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Extra3SubjString" class="control-label"></label>
                        <input asp-for="Extra3SubjString" class="form-control" />
                        <span asp-validation-for="Extra3SubjString" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<!--Buttons-->
<div class="form-row custom-row-responsiveness">
    <div class="col-xl-2 offset-xl-8 col-md-12 custom-col-responsiveness mb-2">
        <a asp-action="ManageBaseClass" asp-controller="BaseClass" class="btn btn-outline-secondary full-width">Back to List</a>
    </div>
    <div class="col-xl-2 col-md-12 custom-col-responsiveness mb-2">
        <input type="button" value="Add" id="btnPostForm" class="btn btn-outline-primary full-width" />
    </div>
</div>

<script>
    $(document).ready(function () {

        $("#btnPostForm").click(function () {
            Swal.fire({
                icon: 'question',
                title: "Add Record",
                text: 'Are you sure you want to save these changes?',
                showClass: {
                    popup: 'animate__animated animate__fadeInDown'
                },
                hideClass: {
                    popup: 'animate__animated animate__fadeOutUp'
                },
                showConfirmButton: true,
                confirmButtonColor: '#217093 ',
                confirmButtonText: 'Add Record',
                showCancelButton: true,
                cancelButtonText: "Cancel",
                allowOutsideClick: false,
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {

                    loadingSpinner_Show();
                    if ($('#formAddStudent').valid()) {
                        $("#formAddStudent").submit();
                    }
                    else {
                        loadingSpinner_Hide();
                        sweetAlertError("Add Record", "Please ensure all fields are correct and valid.'");
                    }
                }
            })
        });
    });
</script>