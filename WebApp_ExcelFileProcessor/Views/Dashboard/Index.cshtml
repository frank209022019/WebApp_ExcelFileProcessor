@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<!--Row 1-->
<div class="form-row custom-row-responsiveness">
    <div class="col-12 custom-col-responsiveness mb-2">
        <h1 class="custom-dark-blue">Base Class - Grade Roster</h1>
        <hr class="custom-blue-hr" />
    </div>
    <div class="col-xl-4 col-md-12 custom-col-responsiveness" onclick="dashboardRedirect('uploadbaseclass')">
        <div class="card text-center h-100">
            <div class="card-block">
                <h2 class="icon-margin-top-fix"><i class="fas fa-upload fa-4x icon-light-grey"></i></h2>
            </div>
            <div class="card-footer">
                <h3>Upload Base Class</h3>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-12 custom-col-responsiveness" onclick="dashboardRedirect('managebaseclass')">
        <div class="card text-center h-100">
            <div class="card-block">
                <h2 class="icon-margin-top-fix"><i class="fa fa-graduation-cap fa-4x icon-light-grey"></i></h2>
            </div>
            <div class="card-footer">
                <h3>Manage Base Class</h3>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-12 custom-col-responsiveness" onclick="dashboardRedirect('manageroster')">
        <div class="card text-center h-100">
            <div class="card-block">
                <h2 class="icon-margin-top-fix"><i class="fas fa-list-ol fa-4x icon-light-grey"></i></h2>
            </div>
            <div class="card-footer">
                <h3>Manage Grade Roster</h3>
            </div>
        </div>
    </div>
</div>

<!--Row 2-->
<div class="form-row custom-row-responsiveness mt-5">
    <div class="col-12 custom-col-responsiveness mb-2">
        <h1 class="custom-dark-blue">Student Screenings</h1>
        <hr class="custom-blue-hr" />
    </div>
    <div class="col-xl-4 col-md-12 custom-col-responsiveness" onclick="dashboardRedirect('uploadstudentscreening')">
        <div class="card text-center h-100">
            <div class="card-block">
                <h2 class="icon-margin-top-fix"><i class="fas fa-cloud-upload-alt fa-4x icon-light-grey"></i></h2>
            </div>
            <div class="card-footer">
                <h3>Upload Student Screenings</h3>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-12 custom-col-responsiveness" onclick="dashboardRedirect('managestudentscreening')">
        <div class="card text-center h-100">
            <div class="card-block">
                <h2 class="icon-margin-top-fix"><i class="fa fa-temperature-low fa-4x icon-light-grey"></i></h2>
            </div>
            <div class="card-footer">
                <h3>Manage Student Screenings</h3>
            </div>
        </div>
    </div>
</div>

<!--Row 3-->
<div class="form-row custom-row-responsiveness mt-5">
    <div class="col-12 custom-col-responsiveness mb-2">
        <h1 class="custom-dark-blue">Reports</h1>
        <hr class="custom-blue-hr" />
    </div>
    <div class="col-xl-4 col-md-12 custom-col-responsiveness" onclick="dashboardRedirect('schoolabsent')">
        <div class="card text-center h-100">
            <div class="card-block">
                <h2 class="icon-margin-top-fix"><i class="fas fa-user-friends fa-4x icon-light-grey"></i></h2>
            </div>
            <div class="card-footer">
                <h3>School Absent Report</h3>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-12 custom-col-responsiveness" onclick="dashboardRedirect('studentabsent')">
        <div class="card text-center h-100">
            <div class="card-block">
                <h2 class="icon-margin-top-fix"><i class="fa fa-user-clock fa-4x icon-light-grey"></i></h2>
            </div>
            <div class="card-footer">
                <h3>Student Absent Report</h3>
            </div>
        </div>
    </div>
</div>

<script>
    function dashboardRedirect(destination) {
        switch (destination) {
            case 'uploadbaseclass':
                  window.location.href = '@Url.Action("UploadBaseClass", "Dashboard")';
            break;
           case 'managebaseclass':
                window.location.href = '@Url.Action("ManageBaseClass", "Dashboard")';
                break;
            case 'uploadstudentscreening':
             window.location.href = '@Url.Action("UploadStudentScreening", "StudentScreening")';
                break;
            case 'managestudentscreening':
             window.location.href = '@Url.Action("ManageStudentScreening", "StudentScreening")';
                break;
            case 'schoolabsent':
                window.location.href = '@Url.Action("SchoolAbsenteeByDate", "Report")';
                break;
            case 'studentabsent':
             window.location.href = '@Url.Action("StudentAbsenteeByDate", "Report")';
                break
            case 'manageroster':
               window.location.href = '@Url.Action("Index", "GradeModuleRoster")';
            break;
        }
    }
</script>